<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/rounded_border"
    android:backgroundTint="@color/green_100"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/textName"
        style="@style/SetEditText"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="@color/gray_100"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textGrade1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGrade1"
        style="@style/SetEditText"
        android:text="TextView"
        android:textColor="@color/gray_400"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textName"
        app:layout_constraintEnd_toStartOf="@+id/textGrade2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textName"
        app:layout_constraintTop_toTopOf="@+id/textName" />

    <TextView
        android:id="@+id/textGrade2"
        style="@style/SetEditText"
        android:text="TextView"
        android:textColor="@color/gray_400"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textGrade1"
        app:layout_constraintEnd_toStartOf="@+id/textGrade3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textGrade1"
        app:layout_constraintTop_toTopOf="@+id/textGrade1" />

    <TextView
        android:id="@+id/textGrade3"
        style="@style/SetEditText"
        android:text="TextView"
        android:textColor="@color/gray_400"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textGrade2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textGrade2"
        app:layout_constraintTop_toTopOf="@+id/textGrade2" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGrade3"
        app:srcCompat="@drawable/delete" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintTop_toBottomOf="@+id/textGrade3"
        app:srcCompat="@drawable/edit" />

</androidx.constraintlayout.widget.ConstraintLayout>